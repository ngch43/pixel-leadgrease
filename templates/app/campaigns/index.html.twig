{% extends 'layouts/default.html.twig' %}

{% block title %}List campaings!{% endblock %}

{% block body %}
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <caption><a class="btn btn-primary" href="{{ path('app_campaign_view') }}" >Add</a></caption>
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Token</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Method</th>
                                    <th scope="col">Pixel</th>
                                    <th scope="col">Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for campaign in campaigns %}
                                    <tr>
                                        <th scope="row">{{ campaign.id }}</th>
                                        <td>{{ campaign.token }}</td>
                                        <td>{{ campaign.url }}</td>
                                        <td>{{ campaign.method }}</td>
                                        <td>{{ campaign.pixel }} % </td>
                                        <td>
                                            <a class="btn btn-primary" href="{{ path('app_campaign_view', { campaign_id:campaign.id }) }}" >Edit</a>
                                            <button class="btn btn-danger">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                {% endfor %}
                              
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
{% endblock %}
